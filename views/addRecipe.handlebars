
 <div class="col-md-8">
        <h2>Add a recipe</h2>
        <form class="form custom-form shadow  p-3 ">
            <div class="form-group">
                <label for="recipe-title" class="h4">Recipe name:</label>
                <input class="rounded" type="text" id="recipe-title" />
            </div>


           <div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <label for="description" class="h4">Description:</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <textarea class="form-control rounded" type="text" id="description" name="description" rows="3" cols="60"></textarea>
        </div>
    </div>
</div>

           <div class="form-group">
    <label for="ingredient" class="h4">Add an ingredient:</label>
    <div class="input-group">
        <input class="form-control rounded" type="text" id="ingredient" />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary rounded" type="button">Add</button>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <label for="instructions" class="h4">Instructions:</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <textarea class="form-control rounded" type="text" id="instructions" name="instructions" rows="12" cols="80"></textarea>
        </div>
    </div>
</div>


            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit recipe</button>
            </div>
        </form>
    </div>


