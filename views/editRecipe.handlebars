
 <div class="col-md-8">
        <h2>Edit your recipe</h2>
        <form class="form custom-form shadow  p-3 ">
            <div class="form-group">
                <label for="recipe-title" class="h4">Recipe name:</label>
                <input value="{{recipe_name}}" class="rounded" type="text" id="recipe-title" />
            </div>


           <div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <label for="description" class="h4">Description:</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <textarea class="form-control rounded" type="text" id="description" name="description" rows="3" cols="60">{{description}}</textarea>
        </div>
    </div>
</div>

           <div class="form-group">
    <label for="ingredient" class="h4">Add an ingredient:</label>
    <div class="input-group">
        <input class="form-control rounded mb-1" type="text" id="ingredient" />
        <div class="input-group-append">
            <button id="addIngredientBtn" class="btn btn-outline-secondary rounded ml-1" type="button">Add</button>
        </div>
    </div>
    <ul class="ingredientList">
        {{#each ingredients as |ingredient|}}
        <li>{{ingredient}}<button class="btn btn-danger btn-small ml-2 mb-2" type="button">Delete</button></li>
        {{/each}}
    </ul>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <label for="instructions" class="h4">Instructions:</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <textarea class="form-control rounded" type="text" id="instructions" name="instructions" rows="12" cols="80">{{instructions}}</textarea>
        </div>
    </div>
</div>


            <div class="form-group">
                <button id="editRecipeBtn" data-id="{{id}}" class="btn btn-primary" type="submit">Submit recipe</button>
            </div>
        </form>
    </div>



<script src="../editRecipe.js"></script>